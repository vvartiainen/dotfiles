#!/bin/bash

export XDG_CONFIG_HOME="$HOME/.config"
HISTFILE="$HOME/.zsh_history"
HISTSIZE=100000
SAVEHIST=100000

export ZSH="$HOME/.oh-my-zsh"
export ZDOTDIR="$HOME/"
export ZSH_AUTOSUGGEST_STRATEGY=(history completion)
# export ZSH_THEME="powerlevel10k/powerlevel10k"
export ZSH_THEME="robbyrussell"
plugins=(fast-syntax-highlighting aws git docker docker-compose asdf dotenv golang terraform macos npm podman ripgrep thefuck tmux ssh rust)
zstyle ':omz:update' mode reminder
# homebrew completions
FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"

# Define configs before loading this
source "$ZSH"/oh-my-zsh.sh

export EDITOR="nvim"
export VISUAL="nvim"
export LANG="en_US.UTF-8"
export FZF_DEFAULT_COMMAND="fd --type f"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_DEFAULT_OPTS=" \
--color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
--color=marker:#f5e0dc,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8"

# macOS specifics
if [[ $(uname) == "Darwin" ]]; then
	. "/opt/homebrew/opt/asdf/libexec/asdf.sh"

	# source /opt/homebrew/share/zsh-autocomplete/zsh-autocomplete.plugin.zsh
	source "$(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh"

	export BROWSER="arc"

	# Temp disable, nightly was a bit unreliable. Use nvim from brew
	# export PATH="$HOME/prog/nvim-macos-arm64/bin:$PATH"
fi

alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

alias la="ls -lah"
alias lda="lsd -la"
alias vi="nvim"
alias vim="nvim"

alias tmls="tmux ls"
alias tma="tmux attach -t"

alias lg="lazygit"

alias falias="alias | fzf"
alias fhistory="history | fzf"
alias fbinds="bindkey | fzf"

eval "$(fzf --zsh)"

eval "$(thefuck --alias)"
eval "$(zoxide init zsh)"

alias reloadall="yabai --restart-service && skhd --restart-service && sketchybar --reload"

# NNN catppuccin
BLK="03" CHR="03" DIR="04" EXE="02" REG="07" HARDLINK="05" SYMLINK="05" MISSING="08" ORPHAN="01" FIFO="06" SOCK="03" UNKNOWN="01"
export NNN_COLORS="#04020301;4231"
export NNN_FCOLORS="$BLK$CHR$DIR$EXE$REG$HARDLINK$SYMLINK$MISSING$ORPHAN$FIFO$SOCK$UNKNOWN"
