#!/bin/bash

# bindkey "^F" forward-word
# bindkey "^B" backward-word

export XDG_CONFIG_HOME="$HOME/.config"
HISTFILE="$HOME/.zsh_history"
HISTSIZE=100000
SAVEHIST=100000

export ZSH="$HOME/.oh-my-zsh"
export ZDOTDIR="$HOME/"
export ZSH_AUTOSUGGEST_STRATEGY=(history completion)
export ZSH_THEME="robbyrussell"
plugins=(kitty fast-syntax-highlighting aws git asdf terraform npm golang poetry)
zstyle ':omz:update' mode reminder
# homebrew completions
FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"

# Define configs before loading this
source "$ZSH"/oh-my-zsh.sh

# Golang
export GOPATH=$HOME/golang
export GOROOT=/opt/homebrew/opt/go/libexec
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin

export PATH="$HOME/Library/Application Support/pypoetry/venv/bin:$PATH"

export EDITOR="nvim"
export VISUAL="nvim"
export LANG="en_US.UTF-8"
export FZF_DEFAULT_COMMAND="fd --type f"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_DEFAULT_OPTS=" \
--color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
--color=marker:#f5e0dc,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8"

# macOS specifics
if [[ $(uname) == "Darwin" ]]; then
  export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH"
  source "$(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh"

  export PATH="$HOME/prog/zig-macos-arm64:$PATH"
# export PATH="$HOME/prog/nvim-macos-arm64/bin:$PATH"
fi

alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

alias la="lsd -la"
alias lt='lsd --tree'
alias vi="nvim"
alias vim="nvim"

alias tmls="tmux ls"
alias tma="tmux attach -t"

alias lg="lazygit"

alias falias="alias | fzf"
alias fhistory="history | fzf"
alias fbinds="bindkey | fzf"

alias vimode="bindkey -v"

alias reloadyabai="sudo yabai --load-sa && yabai --restart-service"
alias reloadsketchybar="sketchybar --reload"
alias reloadskhd="skhd --restart-service"
alias reloadall="sudo yabai --load-sa ; yabai --restart-service ; skhd --restart-service ; sketchybar --reload"

eval "$(thefuck --alias)"
eval "$(zoxide init zsh)"
eval "$(atuin init zsh)"
eval "$(fzf --zsh)"

function yy() {
  local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
  yazi "$@" --cwd-file="$tmp"
  if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
    builtin cd -- "$cwd" || exit
  fi
  rm -f -- "$tmp"
}
