#!/bin/bash
# add plugins in .zshrc before oh my zsh is initialized echo 'plugins=(git)' >> ~/.zshrc
# plugins=(git npm aws docker gh golang terraform podman ripgrep thefuck tmux rust ssh rsync node macos dotenv asdf)
export ZSH_AUTOSUGGEST_STRATEGY=(history completion)
alias zshconfig="vi ~/prog/dotfiles/.zsh_config"
alias zshreload="source ~/.zshrc"

if [[ $(uname) == "Darwin" ]]; then
	# brew install asdf
	. "/opt/homebrew/opt/asdf/libexec/asdf.sh"

	# brew install zsh-autosuggestions
	source "$(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh"

	export BROWSER="arc"

	# export PATH="$HOME/prog/nvim-macos-arm64/bin:$PATH"
fi

eval $(thefuck --alias)

export BROWSER="arc"

# aliases
alias la="ls -lah"
alias vi="nvim"
alias vim="nvim"

alias dotfiles="cd ~/prog/dotfiles/"

alias tmls="tmux ls"
alias tma="tmux attach"

alias lg="lazygit"

alias gaac="git add -A && git commit --amend --no-edit"

export EDITOR="nvim"
export VISUAL="nvim"
export LANG="en_US.UTF-8"

export XDG_CONFIG_HOME="$HOME/.config"
export ZDOTDIR="$HOME/"

alias prog="cd ~/prog && vi"

# Wrapper for yazi
function yy() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		cd -- "$cwd" || exit
	fi
	rm -f -- "$tmp"
}

eval "$(zoxide init zsh)"

alias f='cd $(fd --type directory | fzf)'
