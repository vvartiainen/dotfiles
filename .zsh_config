#!/bin/bash

HISTFILE="$HOME/.zsh_history"
HISTSIZE=100000
SAVEHIST=100000

export ZSH="$HOME/.oh-my-zsh"
export ZDOTDIR="$HOME/"
export ZSH_AUTOSUGGEST_STRATEGY=(completion history)
export ZSH_THEME="robbyrussell"
plugins=(git docker asdf dotenv docker gh golang terraform macos npm podman ripgrep thefuck tmux ssh rust)
zstyle ':omz:update' mode reminder
# homebrew completions
FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"

# Define configs before loading this
source "$ZSH"/oh-my-zsh.sh

export EDITOR="nvim"
export VISUAL="nvim"
export LANG="en_US.UTF-8"

export XDG_CONFIG_HOME="$HOME/.config"

# macOS specifics
if [[ $(uname) == "Darwin" ]]; then
	. "/opt/homebrew/opt/asdf/libexec/asdf.sh"

	source "$(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh"

	export BROWSER="arc"

	# Temp disable, nightly was a bit unreliable. Use nvim from brew
	# export PATH="$HOME/prog/nvim-macos-arm64/bin:$PATH"
fi

alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

alias la="ls -lah"
alias lda="lsd -la"
alias vi="nvim"
alias vim="nvim"

alias tmls="tmux ls"
alias tma="tmux attach -t"

alias lg="lazygit"

alias falias="alias | fzf"
alias fhistory="history | fzf"

eval "$(fzf --zsh)"

eval "$(thefuck --alias)"
eval "$(zoxide init zsh)"

alias reloadall="yabai --restart-service && skhd --restart-service && sketchybar --reload"

cd "$HOME" || exit
