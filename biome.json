{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "space",
			"indentWidth": 4,
			"semicolons": "always"
		}
	}
}
