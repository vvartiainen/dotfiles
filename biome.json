{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },

    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "indentStyle": "space",
            "indentWidth": 4,
            "semicolons": "always"
        }
    }
}
