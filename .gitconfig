[core]
pager = delta

[user]
name=Ville Vartiainen
email=vvarti@gmail.com

[credential]
helper=osxkeychain

[init]
defaultbranch=main

[interactive]
diffFilter = delta --color-only

[delta]
navigate = true    # use n and N to move between diff sections

[merge]
conflictstyle = diff3

[diff]
colorMoved = default

[pull]
rebase = true

[filter.lfs]
clean=git-lfs clean -- %f
smudge=git-lfs smudge -- %f
process=git-lfs filter-process
required=true
