{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "TSX Current file",
      "type": "pwa-node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--require", "tsx/suppress-warnings", "--import", "tsx"],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
